
@{
    ViewData["Title"] = "Permisos";
}

<h4>Permisos</h4>

<!--botonera-->
<div class="row mb-2">
    <div class="col-lg-12">
        <input type="button" value="Nuevo" class="btn-sm btn-primary" data-toggle="modal" data-target="#modalTipoUsuario" onclick="openModal(1)" />
    </div>
</div>
<!--TABLA-->
<div class="row">
    <div class="col-lg-12" id="tableData">
         <div class="card">
            <div class="card-body" id="tableData"></div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="modalTipoUsuario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="card-header bg-dark">
            <h3 class="text-light">Registro permisos</h3>
        </div>
        <div class="modal-content">
            <form id="frmTipoUsuario">
                <div class="modal-body">
                    <input type="hidden" id="iidtipousuario" class="form-control data" name="iidtipousuario" />
                    <div class="row">
                        <div class="form-group col-lg-6 col-sm-12">
                            <label>Nombre rol:</label>
                            <input type="text" autocomplete="off" autofocus id="nombretipousuario" class="form-control data requerid" name="nombretipousuario" placeholder="Escriba el nombre del rol" />
                        </div>
                        <div class="form-group col-lg-6 col-sm-12">
                            <label>Descripción:</label>
                            <input type="text" autocomplete="off" id="descripcion" class="form-control data requerid" name="descripcion" placeholder="Escriba una breve descripción de los permisos" />
                        </div>
                    </div>
                    <div class="form-group col-lg-6 col-sm-12">
                        <p><strong>Asignar paginas:</strong></p>
                        <div id="listadoPaginas">
                            Cargando paginas...
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-sm btn-secondary" data-dismiss="modal" id="btnCerrar">Cerrar</button>
                    <button type="submit" class="btn-sm btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/generic.js"></script>
<script src="~/js/PeticionesAJX/tipousuario.js" asp-append-version="true"></script>