<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/iconSystem//punto-de-venta.svg" />
    <title>Ferreteria La Terminal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/5.1 datatables.min.css" rel="stylesheet" />
    <link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" />
    <link href="~/css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-5.14.0-web/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/PeticionesAJX/menu.js"></script>
    <style>
        .btn-primary {
            color: #fff;
            background-color: #184C8E;
            border-color: #2e6da4;
        }

        #aside {
            overflow: hidden auto;
            height: 80vh;
        }

    </style>
</head>
<body style="background:#fff" id="aside">
    <!--Mi sidebar-->
    <div class="d-flex toggled" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark" id="sidebar-wrapper">
            <div class="sidebar-heading text-light">
                <i class="fas fa-tools"></i> <a class="text-light" asp-action="Index" asp-controller="Home">La Terminal&reg;</a>
            </div>
            <div class="list-group list-group-flush" id="menuDinamico"></div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-dark">
                <a href="#" title="Abrir u ocultar menu" class="btn btn-dark" id="menu-toggle" style="border-color:#808080;margin-right:5px;">
                    <i class="fas fa-arrows-alt-h"></i>
                </a>
                <div id="btnCerrarSesion" class="text-right"></div>
                <h5 class="text-light ml-2">@DateTime.Now.ToString("dd/MM/yyyy")</h5>
            </nav>
            <div style="margin-right:15px; margin-left:17px;" class=" animate__animated animate__fadeIn">
                @RenderBody()
            </div>
            <div class="text-center">
                <span>Ferreteria Dyval La Terminal - Desarrollado por Bryan Campos</span>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/5.2 datatables.min.js.js"></script>
    <script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
