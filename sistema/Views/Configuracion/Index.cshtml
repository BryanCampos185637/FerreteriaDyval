
@{
    ViewData["Title"] = "Index";
}

<style>
    .btn-link{
        text-decoration:none !important;
    }
</style>
<br />
<div class="container">
    <div class="row">
        <div class="card col-lg-12 col-sm-12">
            <div class="card-header bg-dark">
                <h4 class="card-title text-light"><i class="fas fa-cogs"></i> Configuración de facturas, crédito fiscal y cotizaciones.</h4>
            </div>
            <div class="card-body">
                <div class="row">
                   <partial name="~/Views/Configuracion/_FormularioRegistro.cshtml"/>
                    <!--credenciales-->
                    <div class="col-lg-12 col-sm-12 mt-3">
                        <h5>Escribe tus credenciales de usuario para efectuar cambios</h5><hr />
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>Nombre usuario:</label>
                            <input type="text" min="0" id="txtUser" autocomplete="off" placeholder="Escribe tu nombre de usuario" class="form-control r" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="form-group">
                            <label>Contraseña:</label>
                            <input type="password" min="0" id="txtPass" autocomplete="off" placeholder="Escribe tu contraseña" class="form-control r" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <button type="button" class="btn btn-primary" onclick="saveConfiguracion()">Guardar Configuración</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/PeticionesAJX/configuracion.js" asp-append-version="true"></script>